{
    "name": "nimbro Dev Container",
    "build": {
        "dockerfile": "../docker/Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-iot.vscode-ros",
                "ms-azuretools.vscode-docker"
            ]
        },
        "settings": {
            "terminal.integrated.shell.linux": "/bin/bash"
        }
    },
    "postCreateCommand": "echo 'Development container ready.'",
    "remoteUser": "root",
    "runArgs": ["--network=host"],
    "workspaceMount": "source=${localWorkspaceFolder},target=/colcon_ws/src/vlm_gist,type=bind,consistency=consistent",
    "workspaceFolder": "/colcon_ws/src/vlm_gist"
}
